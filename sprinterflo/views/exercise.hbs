<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Exercise</title>
  <link href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@700&family=Lora:wght@400;700&display=swap" rel="stylesheet">
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    body {
      font-family: 'Lora', serif;
      background-color: #f8f9fa;
      color: #333;
    }
    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 20px;
    }
    /* Header */
    header {
      background: #FF8CD9;
      color: white;
      position: sticky;
      top: 0;
      z-index: 50;
      padding: 15px 0;
    }
    nav {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 0 20px;
    }
    .logo {
      font-family: 'Dancing Script', cursive;
      font-size: 1.8rem;
      font-weight: bold;
    }
    .menu-icon, .profile-icon {
      cursor: pointer;
      font-size: 1.5rem;
    }
    .menu-icon::before {
      content: "‚ò∞";
    }
    .profile-icon::before {
      content: "üë§";
    }
    /* Side Drawer */
    .side-drawer {
      position: fixed;
      top: 0;
      left: -250px;
      width: 250px;
      height: 100%;
      background: #FFDBF5;
      box-shadow: 2px 0 5px rgba(0,0,0,0.1);
      transition: left 0.3s ease;
      z-index: 100;
    }
    .side-drawer.open {
      left: 0;
    }
    .side-drawer .drawer-header {
      padding: 15px;
      border-bottom: 1px solid #F062C0;
      display: flex;
      justify-content: flex-start;
    }
    .side-drawer .back-btn {
      background: none;
      border: none;
      color: #F062C0;
      font-size: 1.5rem;
      cursor: pointer;
    }
    .side-drawer ul {
      list-style: none;
      padding: 20px;
    }
    .side-drawer li {
      margin-bottom: 15px;
    }
    .side-drawer a, .side-drawer button {
      color: #F062C0;
      text-decoration: none;
      font-size: 1rem;
      font-family: 'Lora', serif;
      background: none;
      border: none;
      cursor: pointer;
    }
    .side-drawer a:hover, .side-drawer button:hover {
      color: #FF8CD9;
    }
    /* Profile Dropdown */
    .profile-dropdown {
      position: absolute;
      top: 50px;
      right: 20px;
      background: #FFDBF5;
      border-radius: 5px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
      display: none;
      z-index: 100;
    }
    .profile-dropdown.open {
      display: block;
    }
    .profile-photo {
      width: 80px;
      height: 80px;
      border-radius: 50%;
      background: #FEC8EC;
      margin: 10px auto;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 2rem;
    }
    .profile-dropdown button {
      display: block;
      width: 100%;
      padding: 10px;
      background: none;
      border: none;
      color: #F062C0;
      font-family: 'Lora', serif;
      font-size: 0.9rem;
      cursor: pointer;
    }
    .profile-dropdown button:hover {
      background: #FEC8EC;
    }
    /* Main Content */
    .main-content {
      padding: 20px 0;
    }
    .exercise-section h2 {
      font-family: 'Dancing Script', cursive;
      font-size: 2rem;
      color: #F062C0;
      text-align: center;
      margin-bottom: 20px;
    }
    .days-of-week {
      display: flex;
      justify-content: center;
      gap: 10px;
      margin-bottom: 20px;
    }
    .day-circle {
      width: 40px;
      height: 40px;
      border-radius: 50%;
      background: #FEC8EC;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 0.9rem;
      color: #333;
      position: relative;
      cursor: pointer;
    }
    .day-circle.current {
      background: #FF8CD9;
      color: white;
    }
    .day-circle:not(:last-child)::after {
      content: '';
      position: absolute;
      right: -25px;
      width: 40px;
      height: 2px;
      background: #FEC8EC;
      z-index: -1;
    }
    .exercise-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 15px;
    }
    .exercise-card {
      background: #FEC8EC;
      padding: 15px;
      border-radius: 10px;
      display: flex;
      align-items: center;
      justify-content: space-between;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }
    .exercise-card .tick-btn {
      background: none;
      border: none;
      font-size: 1.5rem;
      cursor: pointer;
      color: #FF8CD9;
      margin-right: 10px;
    }
    .exercise-card .tick-btn.completed {
      color: #32CD32;
    }
    .exercise-card .emoji {
      font-size: 2rem;
      margin-right: 10px;
    }
    .exercise-card .details {
      flex: 1;
    }
    .exercise-card .details h3 {
      font-family: 'Lora', serif;
      font-size: 1.1rem;
      color: #333;
      margin-bottom: 5px;
    }
    .exercise-card .details p {
      font-size: 0.9rem;
      color: #555;
    }
    .exercise-card .play-btn {
      background: none;
      border: none;
      font-size: 1.5rem;
      cursor: pointer;
      color: #FF8CD9;
    }
    .exercise-card .play-btn:hover {
      color: #F062C0;
    }
    /* Footer */
    footer {
      background: #F062C0;
      color: white;
      padding: 40px 0;
      margin-top: 40px;
    }
    .footer-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 20px;
      margin-bottom: 30px;
    }
    footer h3 {
      font-family: 'Dancing Script', cursive;
      font-size: 1.3rem;
      margin-bottom: 15px;
    }
    footer p, footer a {
      font-size: 0.9rem;
      color: #FFDBF5;
      font-family: 'Lora', serif;
    }
    footer a {
      text-decoration: none;
      display: block;
      margin-bottom: 8px;
    }
    footer a:hover {
      color: white;
    }
    .footer-bottom {
      text-align: center;
      font-size: 0.9rem;
      color: #FFDBF5;
      font-family: 'Lora', serif;
    }
    /* Responsive */
    @media (max-width: 768px) {
      .exercise-section h2 {
        font-size: 1.8rem;
      }
      .day-circle {
        width: 35px;
        height: 35px;
        font-size: 0.8rem;
      }
      .day-circle:not(:last-child)::after {
        right: -20px;
        width: 30px;
      }
      .exercise-card .tick-btn {
        font-size: 1.2rem;
        margin-right: 5px;
      }
      .exercise-card .emoji {
        font-size: 1.5rem;
      }
      .exercise-card .details h3 {
        font-size: 1rem;
      }
      .exercise-card .details p {
        font-size: 0.8rem;
      }
    }
  </style>
</head>
<body>
  <!-- Header -->
  <header>
    <nav>
      <div class="menu-icon" id="menuIcon"></div>
      <div class="logo">Lunara</div>
      <div class="profile-icon" id="profileIcon"></div>
    </nav>
  </header>

  <!-- Side Drawer -->
  <div class="side-drawer" id="sideDrawer">
    <div class="drawer-header">
      <button class="back-btn" id="closeDrawerBtn">‚Üê</button>
    </div>
    <ul>
      <li><a href="#">Notifications</a></li>
      <li><a href="#">Settings</a></li>
      <li><a href="#">Help</a></li>
      <li><button id="logoutBtn">Logout</button></li>
    </ul>
  </div>

  <!-- Profile Dropdown -->
  <div class="profile-dropdown" id="profileDropdown">
    <div class="profile-photo">üë§</div>
    <button id="editPhotoBtn">Edit Profile Photo</button>
    <button id="editInfoBtn">Edit Registration Info</button>
  </div>

  <!-- Main Content -->
  <div class="container">
    <div class="main-content">
      <section class="exercise-section">
        <h2>Let's exercise!</h2>
        <div class="days-of-week" id="daysOfWeek">
          <div class="day-circle" data-day="Su">Su</div>
          <div class="day-circle current" data-day="Mo">Mo</div>
          <div class="day-circle" data-day="Tu">Tu</div>
          <div class="day-circle" data-day="We">We</div>
          <div class="day-circle" data-day="Th">Th</div>
          <div class="day-circle" data-day="Fr">Fr</div>
          <div class="day-circle" data-day="Sa">Sa</div>
        </div>
        <div class="exercise-grid" id="exerciseGrid">
          <!-- Exercises will be populated by JavaScript -->
        </div>
      </section>
    </div>
  </div>

  <!-- Footer -->
  <footer>
    <div class="container">
      <div class="footer-grid">
        <div>
          <h3>Lunara</h3>
          <p>Empowering menstruating individuals with AI-driven wellness tools.</p>
        </div>
        <div>
          <h3>Links</h3>
          <a href="#">Dashboard</a>
          <a href="#">Support</a>
        </div>
        <div>
          <h3>Contact</h3>
          <p>Email: support@lunara.app</p>
          <p>Phone: (123) 456-7890</p>
        </div>
      </div>
      <div class="footer-bottom">
        ¬© 2025 Lunara. All rights reserved.
      </div>
    </div>
  </footer>

  <script>
    // State
    const weeklyExercises = {
      Su: [
        { emoji: "üßò‚Äç‚ôÄÔ∏è", name: "Squats", time: "5 mins", reps: "20 reps" },
        { emoji: "üèÉ‚Äç‚ôÄÔ∏è", name: "Jumping Jacks", time: "5 mins", reps: "30 reps" }
      ],
      Mo: [
        { emoji: "üßò‚Äç‚ôÄÔ∏è", name: "Squats", time: "5 mins", reps: "20 reps" },
        { emoji: "üßò", name: "Yoga", time: "5 mins", reps: "3 poses" },
        { emoji: "üí™", name: "Push-ups", time: "5 mins", reps: "15 reps" },
        { emoji: "üèÉ‚Äç‚ôÄÔ∏è", name: "Jumping Jacks", time: "5 mins", reps: "30 reps" }
      ],
      Tu: [
        { emoji: "üßò", name: "Yoga", time: "5 mins", reps: "3 poses" },
        { emoji: "üí™", name: "Push-ups", time: "5 mins", reps: "15 reps" }
      ],
      We: [
        { emoji: "üßò‚Äç‚ôÄÔ∏è", name: "Squats", time: "5 mins", reps: "20 reps" },
        { emoji: "üèÉ‚Äç‚ôÄÔ∏è", name: "Jumping Jacks", time: "5 mins", reps: "30 reps" }
      ],
      Th: [
        { emoji: "üßò", name: "Yoga", time: "5 mins", reps: "3 poses" },
        { emoji: "üí™", name: "Push-ups", time: "5 mins", reps: "15 reps" }
      ],
      Fr: [
        { emoji: "üßò‚Äç‚ôÄÔ∏è", name: "Squats", time: "5 mins", reps: "20 reps" },
        { emoji: "üèÉ‚Äç‚ôÄÔ∏è", name: "Jumping Jacks", time: "5 mins", reps: "30 reps" }
      ],
      Sa: [
        { emoji: "üßò", name: "Yoga", time: "5 mins", reps: "3 poses" },
        { emoji: "üí™", name: "Push-ups", time: "5 mins", reps: "15 reps" }
      ]
    };

    let exerciseLogs = JSON.parse(localStorage.getItem('exerciseLogs')) || {};
    let currentDay = 'Mo'; // Default to Monday as per the design

    // DOM Elements
    const daysOfWeek = document.getElementById('daysOfWeek');
    const exerciseGrid = document.getElementById('exerciseGrid');
    const menuIcon = document.getElementById('menuIcon');
    const sideDrawer = document.getElementById('sideDrawer');
    const closeDrawerBtn = document.getElementById('closeDrawerBtn');
    const profileIcon = document.getElementById('profileIcon');
    const profileDropdown = document.getElementById('profileDropdown');
    const editInfoBtn = document.getElementById('editInfoBtn');
    const logoutBtn = document.getElementById('logoutBtn');

    // Render Exercises
    function renderExercises(day) {
      exerciseGrid.innerHTML = '';
      const exercises = weeklyExercises[day] || [];
      exercises.forEach((exercise, index) => {
        const dateStr = new Date('2025-05-17').toISOString().split('T')[0];
        const isCompleted = exerciseLogs[dateStr]?.[day]?.[index] || false;
        const exerciseCard = document.createElement('div');
        exerciseCard.className = 'exercise-card';
        exerciseCard.innerHTML = `
          <button class="tick-btn ${isCompleted ? 'completed' : ''}" data-day="${day}" data-index="${index}">
            ${isCompleted ? '‚úî' : '‚¨ú'}
          </button>
          <span class="emoji">${exercise.emoji}</span>
          <div class="details">
            <h3>${exercise.name}</h3>
            <p>Est. Time: ${exercise.time}, ${exercise.reps}</p>
          </div>
          <a href="posture.html" class="play-btn">‚ñ∂</a>
        `;
        exerciseGrid.appendChild(exerciseCard);
      });

      // Add event listeners to tick buttons
      document.querySelectorAll('.tick-btn').forEach(btn => {
        btn.addEventListener('click', () => {
          const day = btn.dataset.day;
          const index = btn.dataset.index;
          const dateStr = new Date('2025-05-17').toISOString().split('T')[0];
          exerciseLogs[dateStr] = exerciseLogs[dateStr] || {};
          exerciseLogs[dateStr][day] = exerciseLogs[dateStr][day] || {};
          exerciseLogs[dateStr][day][index] = !exerciseLogs[dateStr][day][index];
          localStorage.setItem('exerciseLogs', JSON.stringify(exerciseLogs));
          renderExercises(day);
        });
      });
    }

    // Days of Week Click Handler
    daysOfWeek.querySelectorAll('.day-circle').forEach(day => {
      day.addEventListener('click', () => {
        daysOfWeek.querySelectorAll('.day-circle').forEach(d => d.classList.remove('current'));
        day.classList.add('current');
        currentDay = day.dataset.day;
        renderExercises(currentDay);
      });
    });

    // Side Drawer
    menuIcon.addEventListener('click', () => {
      sideDrawer.classList.add('open');
    });
    closeDrawerBtn.addEventListener('click', () => {
      sideDrawer.classList.remove('open');
    });

    // Profile Dropdown
    profileIcon.addEventListener('click', () => {
      profileDropdown.classList.toggle('open');
    });

    editInfoBtn.addEventListener('click', () => {
      window.location.href = 'register.html';
    });

    // Logout
    logoutBtn.addEventListener('click', () => {
      localStorage.removeItem('userEmail');
      localStorage.removeItem('userPassword');
      localStorage.removeItem('hasRegistered');
      localStorage.removeItem('profileData');
      localStorage.removeItem('dailyLogs');
      localStorage.removeItem('exerciseLogs');
      alert('Logged out successfully!');
      window.location.href = 'index.html';
    });

    // Initial Render
    renderExercises(currentDay);
  </script>
</body>
</html>